<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:id="@+id/main_layout">

    <ImageView
        android:layout_width="265dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/heartsfilter"
        android:id="@+id/horn"/>

    <RelativeLayout
        android:id="@+id/cameraCtrlLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/capture_Img"
            android:layout_marginRight="20dp"
            android:id="@+id/flower_filter"
            android:src="@drawable/flowerfiltericon"/>

        <ImageView
            android:id="@+id/capture_Img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/camera_shutter" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/capture_Img"
            android:layout_marginLeft="20dp"
            android:id="@+id/heart_filter"
            android:src="@drawable/heartsfiltericon"/>

        <ImageView
            android:id="@+id/flip_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/camera_flip"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/camera_flash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/flash_off_v70"
            android:visibility="gone"/>

    </RelativeLayout>

    <com.dabkick.videosdk.publicsettings.DabKickVideoButton
        android:id="@+id/watch_together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>


</RelativeLayout>
